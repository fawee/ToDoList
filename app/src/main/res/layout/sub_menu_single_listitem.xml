<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/listItem_checkBox"
        android:focusable="false"/>

    <ImageView
        android:id="@+id/listItem_reminder"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    <TextView
        android:id="@+id/listItem_priority"
        android:layout_toLeftOf="@+id/listItem_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"/>


    <TextView
        android:id="@+id/listItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listItem_checkBox"
        android:paddingLeft="40dp"
        android:layout_marginRight="10dp"
        android:focusable="false"/>

    <TextView
        android:id="@+id/listItem_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listItem_date"
        android:layout_below="@+id/listItem_checkBox"
        android:focusable="false"/>


</RelativeLayout>